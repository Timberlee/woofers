<h1>My Posts</h1>
<form action='/posts' method='post'>
  <input type='text' name='post_title' placeholder="Bark title">
  <input type='text' name='post_body' placeholder='Bark something!'>
  <input type='submit' value='Woof!'>
</form>

<div class='row'>
  <% @myposts.first(20).each do |post| %>
  <div class='col-4 blog-post'>
    <h4> <%=post.title%></h4>
    <p><%=post.body%></p>
    <p> Published: <%= post.created_at %> by <a href='/account'>You</a></p>

  </div>
    <% end %>
</div>
